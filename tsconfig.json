{
  "compilerOptions": {
    "declaration": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "module": "CommonJS",
    "target": "ES6",
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018"
    ]
  },
  "include": [
    "src",
    "tests"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
